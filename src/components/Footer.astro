---
import * as m from "@messages/messages";
import { Link } from "@components";
import GithubLogo from "@images/design/github-mark.svg";
import SevenSquareLogo from "@images/design/sevensquare.logo.svg";

const tools = [
  {
    text: "Astro",
    href: "https://astro.build",
    hreflang: "en",
  },
  {
    text: "TailwindCSS",
    href: "https://tailwindcss.com",
    hreflang: "en",
  },
  {
    text: "Paraglide JS",
    href: "https://inlang.com/m/gerre34r/library-inlang-paraglideJs",
    hreflang: "en",
  },
  {
    text: "Nodemailer",
    href: "https://nodemailer.com",
    hreflang: "en",
  },
];

const { currentLocale } = Astro;
const year = new Date().getFullYear();
---

<footer
  class="bg-primary-solid text-primary mt-12 flex flex-col gap-2 px-2 py-4 text-sm md:px-8"
>
  <div class="grid grid-cols-2 items-center">
    <div class="flex flex-col justify-start gap-1 md:flex-row">
      <div>{m.made_with()}</div>
      {
        tools.map(({ href, hreflang, text }) => (
          <Link href={href} hreflang={hreflang} rel="external">
            {text}
          </Link>
        ))
      }
    </div>
    <div
      class="flex flex-col items-end justify-start gap-1 self-stretch md:flex-row md:items-center md:justify-end"
    >
      <span class="text-right">
        {m.mention_sevensquare()}
      </span>
      <Link
        href="https://www.sevensquare.fr"
        hreflang="fr"
        rel="external follow"
      >
        <SevenSquareLogo class="h-8 w-8" title="SevenSquare Logo" />
      </Link>
      <Link
        href="https://github.com/pluxain/lechainonmanquant.studio"
        hreflang="en"
        rel="external help nofollow"
      >
        <GithubLogo title="Github Mark" class="h-8 w-8" />
      </Link>
    </div>
  </div>
  <hr />
  <div
    class="flex flex-col-reverse items-center md:flex-row md:justify-between"
  >
    <p>
      &copy;&nbsp;<span id="footer-year">{year}</span
      >&nbsp;Le&nbsp;Cha√ÆnoN&nbsp;ManQuanT
    </p>
    <p>
      --
      <Link
        href={`https://luxain.solutions/${currentLocale}/`}
        hreflang={currentLocale}
        rel="external follow">Luxain Solutions, e.U.</Link
      >
    </p>
  </div>
</footer>
<script is:inline data-astro-rerun>
  document.getElementById("footer-year").innerText = new Date().getFullYear();
</script>
